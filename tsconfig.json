{
    "compilerOptions": {
      "target": "es2020",
      "module": "NodeNext",
      "lib": ["ESNext"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": "app",
      "paths": {
        "@/*": ["./app/*"],
  
        "assets/*": ["./app/assets/*"]
      }
    },
    "include": ["app", "unix.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
  }